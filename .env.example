# ── Database ─────────────────────────────────────────────────
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=LibraryManagementSystem

# ── SMTP / Email ──────────────────────────────────────────────
# For Gmail: generate an App Password at
#   https://myaccount.google.com/security → App Passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password
SMTP_FROM=library@aurora.edu.in
SMTP_FROM_NAME=Antigravity Library
SMTP_CONTACT=library@aurora.edu.in

# ── App ───────────────────────────────────────────────────────
APP_ENV=production
APP_NAME=Antigravity LMS
